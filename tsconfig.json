{
  "compilerOptions": {
    "lib": ["es6"],
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "outDir": "dist",
    // "rootDir": ".",
    "resolveJsonModule": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "sourceMap": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "**/*.spec.ts"]
  // "ts-node": {
  //   "esm": true,
  //   "experimentalSpecifierResolution": "node"
  // }
}
